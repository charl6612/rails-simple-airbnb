<h1>All our flats</h1>

<div class="flats-list">
  <% @flats.each do |flat| %>
  <div class="card p-3" style="width: 18rem;">
      <img src="https://source.unsplash.com/1600x900/?house" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= flat.address%></h6>
      <div class="d-flex justify-content-between">
        <p class="card-text"><i class="fas fa-user-friends"></i><%= flat.number_of_guests%></p>
        <p class="card-text"><i class="fas fa-euro-sign"></i><%= flat.price_per_night%></p>
      </div>
    </div>
    <div id="card_footer">
      <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
      <%= link_to flat_path(flat), 
        method: :delete,
        data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-xs'  do %>
      <span>Delete</span>
      <% end %>

    </div>
  </div>
  <% end %>
</div>